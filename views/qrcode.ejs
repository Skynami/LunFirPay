<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>扫码支付 - <%= order.name %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }
    
    .container {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.2);
      padding: 40px;
      max-width: 400px;
      width: 100%;
      text-align: center;
    }
    
    .title {
      font-size: 20px;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
    }
    
    .amount {
      font-size: 36px;
      font-weight: 700;
      color: #ff6b00;
      margin-bottom: 24px;
    }
    
    .amount::before {
      content: '¥';
      font-size: 24px;
    }
    
    .qrcode-wrapper {
      background: #f8f9fa;
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 24px;
    }
    
    .qrcode-box {
      background: #fff;
      padding: 16px;
      border-radius: 8px;
      display: inline-block;
    }
    
    .qrcode-box img {
      width: 200px;
      height: 200px;
      display: block;
    }
    
    .tip {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      color: #666;
      font-size: 14px;
      margin-bottom: 16px;
    }
    
    .tip svg {
      width: 20px;
      height: 20px;
      color: #07c160;
    }
    
    .order-info {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 16px;
      text-align: left;
      font-size: 13px;
      color: #666;
    }
    
    .order-info .row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
    }
    
    .order-info .row:last-child {
      margin-bottom: 0;
    }
    
    .order-info .label {
      color: #999;
    }
    
    .order-info .value {
      color: #333;
      font-weight: 500;
    }
    
    .status {
      margin-top: 20px;
      padding: 12px;
      border-radius: 8px;
      font-size: 14px;
    }
    
    .status.waiting {
      background: #fff3e0;
      color: #e65100;
    }
    
    .status.success {
      background: #e8f5e9;
      color: #2e7d32;
    }
    
    .spinner {
      display: inline-block;
      width: 16px;
      height: 16px;
      border: 2px solid #e65100;
      border-top-color: transparent;
      border-radius: 50%;
      animation: spin 0.8s linear infinite;
      margin-right: 8px;
      vertical-align: middle;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
    
    .pay-methods {
      display: flex;
      justify-content: center;
      gap: 16px;
      margin-top: 20px;
    }
    
    .pay-methods img {
      width: 32px;
      height: 32px;
      opacity: 0.6;
    }
    
    .countdown {
      margin-top: 16px;
      font-size: 13px;
      color: #999;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="title"><%= order.name %></h1>
    <div class="amount"><%= parseFloat(order.money).toFixed(2) %></div>
    
    <div class="qrcode-wrapper">
      <div class="qrcode-box">
        <img id="qrcodeImg" src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=<%= encodeURIComponent(qrcodeUrl) %>" alt="支付二维码">
      </div>
    </div>
    
    <div class="tip">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/>
        <path d="M9 12l2 2 4-4"/>
      </svg>
      <span>请使用 微信/支付宝 扫描二维码完成支付</span>
    </div>
    
    <div class="order-info">
      <div class="row">
        <span class="label">订单号</span>
        <span class="value"><%= order.trade_no %></span>
      </div>
      <div class="row">
        <span class="label">商户订单号</span>
        <span class="value"><%= order.out_trade_no %></span>
      </div>
    </div>
    
    <div id="status" class="status waiting">
      <span class="spinner"></span>
      等待扫码支付...
    </div>
    
    <div id="countdown" class="countdown">
      订单将在 <span id="timeLeft">300</span> 秒后关闭
    </div>
  </div>

  <script>
    (function() {
      var tradeNo = '<%= order.trade_no %>';
      var returnUrl = '<%= order.return_url || "" %>';
      var checkInterval;
      var countdownInterval;
      var timeLeft = 300;
      
      // 倒计时
      function updateCountdown() {
        timeLeft--;
        document.getElementById('timeLeft').textContent = timeLeft;
        if (timeLeft <= 0) {
          clearInterval(countdownInterval);
          clearInterval(checkInterval);
          document.getElementById('status').innerHTML = '订单已超时关闭';
          document.getElementById('status').className = 'status';
          document.getElementById('countdown').style.display = 'none';
        }
      }
      
      // 检查支付状态
      function checkStatus() {
        fetch('/api/pay/check_status?trade_no=' + tradeNo)
          .then(function(res) { return res.json(); })
          .then(function(data) {
            if (data.code === 0 && data.paid) {
              clearInterval(checkInterval);
              clearInterval(countdownInterval);
              document.getElementById('status').innerHTML = '✓ 支付成功！正在跳转...';
              document.getElementById('status').className = 'status success';
              document.getElementById('countdown').style.display = 'none';
              
              setTimeout(function() {
                if (returnUrl) {
                  window.location.href = returnUrl;
                } else {
                  window.location.href = '/api/pay/success?trade_no=' + tradeNo;
                }
              }, 1500);
            }
          })
          .catch(function(err) {
            console.error('检查状态失败:', err);
          });
      }
      
      // 启动轮询
      checkInterval = setInterval(checkStatus, 2000);
      countdownInterval = setInterval(updateCountdown, 1000);
      
      // 立即检查一次
      checkStatus();
    })();
  </script>
</body>
</html>
